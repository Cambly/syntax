{
  "name": "@cambly/syntax-floating-components",
  "description": "Cambly floating components",
  "version": "2.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "Apache-2.0",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "check-exports": "attw $(pnpm pack) --ignore-rules=cjs-resolves-to-esm",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf *.tgz",
    "dev": "tsup --watch",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "npm run stylelint --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cambly/syntax-design-tokens": "workspace:1.0.0",
    "@floating-ui/react": "^0.24.0"
  },
  "devDependencies": {
    "@cambly/eslint-config-syntax": "workspace:*",
    "@cambly/syntax-tsconfig": "workspace:*",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.1",
    "classnames": "^2.3.2",
    "eslint": "^8.39.0",
    "postcss": "^8.4.23",
    "postcss-modules": "^6.0.0",
    "react": "^18.2.0",
    "tsup": "6.7.0",
    "typescript": "5.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
