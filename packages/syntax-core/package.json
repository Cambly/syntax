{
  "name": "@cambly/syntax-core",
  "description": "Cambly design system core components",
  "version": "9.7.0",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "sideEffects": false,
  "license": "Apache-2.0",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "old_build": "tsup",
    "build": "tsx ../../scripts/build/build.ts",
    "old_clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "cleanbuild": "tsx ../../scripts/build/clean.ts",
    "clean": "rm -rf .turbo && rm -rf node_modules && pnpm cleanbuild",
    "dev": "tsup --watch",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\" --max-warnings 0",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "npm run stylelint --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cambly/syntax-design-tokens": "workspace:0.10.0"
  },
  "devDependencies": {
    "@cambly/eslint-config-syntax": "workspace:*",
    "@cambly/syntax-tsconfig": "workspace:*",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.1",
    "classnames": "2.3.2",
    "esbuild-css-modules-plugin": "^3.0.1",
    "eslint": "8.39.0",
    "postcss": "8.4.23",
    "postcss-modules": "6.0.0",
    "react": "18.2.0",
    "tsup": "6.7.0",
    "tsx": "4.6.2",
    "typescript": "5.0.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
