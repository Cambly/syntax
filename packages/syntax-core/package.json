{
  "name": "@cambly/syntax-core",
  "description": "Cambly design system core components",
  "version": "9.7.0",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "sideEffects": false,
  "license": "Apache-2.0",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "old_build": "tsup",
    "build": "tsx ../../scripts/build/build.ts",
    "old_clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "cleanbuild": "tsx ../../scripts/build/clean.ts",
    "clean": "rm -rf .turbo && rm -rf node_modules && pnpm cleanbuild",
    "dev": "tsup --watch",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\" --max-warnings 0",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "npm run stylelint --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cambly/syntax-design-tokens": "workspace:0.10.0"
  },
  "devDependencies": {
    "@cambly/eslint-config-syntax": "workspace:*",
    "@cambly/syntax-tsconfig": "workspace:*",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.1",
    "classnames": "2.3.2",
    "esbuild-css-modules-plugin": "^3.0.1",
    "eslint": "8.39.0",
    "postcss": "8.4.23",
    "postcss-modules": "6.0.0",
    "react": "18.2.0",
    "tsup": "6.7.0",
    "typescript": "5.0.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./Typography/Typography": {
      "import": "./dist/esm/Typography/Typography.js",
      "require": "./dist/cjs/Typography/Typography.cjs"
    },
    "./TextField/TextField": {
      "import": "./dist/esm/TextField/TextField.js",
      "require": "./dist/cjs/TextField/TextField.cjs"
    },
    "./TapArea/TapArea": {
      "import": "./dist/esm/TapArea/TapArea.js",
      "require": "./dist/cjs/TapArea/TapArea.cjs"
    },
    "./SelectList/SelectList": {
      "import": "./dist/esm/SelectList/SelectList.js",
      "require": "./dist/cjs/SelectList/SelectList.cjs"
    },
    "./RoundButton/RoundButton": {
      "import": "./dist/esm/RoundButton/RoundButton.js",
      "require": "./dist/cjs/RoundButton/RoundButton.cjs"
    },
    "./RadioButton/RadioButton": {
      "import": "./dist/esm/RadioButton/RadioButton.js",
      "require": "./dist/cjs/RadioButton/RadioButton.cjs"
    },
    "./Modal/Modal": {
      "import": "./dist/esm/Modal/Modal.js",
      "require": "./dist/cjs/Modal/Modal.cjs"
    },
    "./LinkButton/LinkButton": {
      "import": "./dist/esm/LinkButton/LinkButton.js",
      "require": "./dist/cjs/LinkButton/LinkButton.cjs"
    },
    "./IconButton/IconButton": {
      "import": "./dist/esm/IconButton/IconButton.js",
      "require": "./dist/cjs/IconButton/IconButton.cjs"
    },
    "./Heading/Heading": {
      "import": "./dist/esm/Heading/Heading.js",
      "require": "./dist/cjs/Heading/Heading.cjs"
    },
    "./Divider/Divider": {
      "import": "./dist/esm/Divider/Divider.js",
      "require": "./dist/cjs/Divider/Divider.cjs"
    },
    "./Chip/Chip": {
      "import": "./dist/esm/Chip/Chip.js",
      "require": "./dist/cjs/Chip/Chip.cjs"
    },
    "./Checkbox/Checkbox": {
      "import": "./dist/esm/Checkbox/Checkbox.js",
      "require": "./dist/cjs/Checkbox/Checkbox.cjs"
    },
    "./Card/Card": {
      "import": "./dist/esm/Card/Card.js",
      "require": "./dist/cjs/Card/Card.cjs"
    },
    "./ButtonGroup/ButtonGroup": {
      "import": "./dist/esm/ButtonGroup/ButtonGroup.js",
      "require": "./dist/cjs/ButtonGroup/ButtonGroup.cjs"
    },
    "./Button/Button": {
      "import": "./dist/esm/Button/Button.js",
      "require": "./dist/cjs/Button/Button.cjs"
    },
    "./Box/Box": {
      "import": "./dist/esm/Box/Box.js",
      "require": "./dist/cjs/Box/Box.cjs"
    },
    "./Badge/Badge": {
      "import": "./dist/esm/Badge/Badge.js",
      "require": "./dist/cjs/Badge/Badge.cjs"
    },
    "./Avatar/Avatar": {
      "import": "./dist/esm/Avatar/Avatar.js",
      "require": "./dist/cjs/Avatar/Avatar.cjs"
    },
    "./package.json": "./package.json"
  }
}
